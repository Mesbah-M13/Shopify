<!-- templates/cart.liquid -->

<style>
.cart-container {
  max-width: 700px;
  margin: 2rem auto;
  padding: 2rem;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.07);
}
.cart-title {
  font-size: 2rem;
  margin-bottom: 1.5rem;
}
.cart-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 2rem;
}
.cart-table thead tr {
  border-bottom: 2px solid #eee;
}
.cart-table th {
  text-align: left;
  padding: 0.5rem;
}
.cart-table th:last-child,
.cart-table td:last-child {
  text-align: right;
}
.cart-table tbody tr {
  border-bottom: 1px solid #f5f5f5;
}
.cart-table td {
  padding: 0.5rem;
}
.cart-product {
  display: flex;
  align-items: center;
}
.cart-product-img {
  width: 50px;
  height: 50px;
  object-fit: cover;
  margin-right: 1rem;
  border-radius: 4px;
}
.cart-product-title {
  font-weight: 600;
}
.cart-product-variant {
  font-size: 0.9em;
  color: #888;
}
.cart-subtotal-row {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 2rem;
}
.cart-subtotal-label,
.cart-subtotal-value {
  font-size: 1.2rem;
  font-weight: 600;
}
.cart-subtotal-label {
  margin-right: 1rem;
}
.cart-checkout {
  text-align: right;
}
.cart-checkout-btn {
  background: #1a73e8;
  color: #fff;
  padding: 0.75rem 2rem;
  border-radius: 4px;
  font-size: 1.1rem;
  text-decoration: none;
  font-weight: 600;
  box-shadow: 0 1px 4px rgba(26,115,232,0.08);
  transition: background 0.2s;
  display: inline-block;
}
.cart-empty {
  font-size: 1.1rem;
  color: #888;
}
</style>

<div class="cart-container">
  <h1 class="cart-title">Your Cart</h1>
  {% if cart.item_count > 0 %}
    <table class="cart-table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        {% for item in cart.items %}
        <tr>
          <td>
            <div class="cart-product">
              {% if item.image %}
                <img src="{{ item.image | img_url: 'small' }}" alt="{{ item.title }}" class="cart-product-img">
              {% endif %}
              <div>
                <div class="cart-product-title">{{ item.title }}</div>
                {% if item.variant_title != 'Default Title' %}
                  <div class="cart-product-variant">{{ item.variant_title }}</div>
                {% endif %}
              </div>
            </div>
          </td>
          <td>{{ item.quantity }}</td>
          <td>{{ item.price | money }}</td>
          <td>{{ item.line_price | money }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    <div class="cart-subtotal-row">
      <span class="cart-subtotal-label">Subtotal:</span>
      <span class="cart-subtotal-value">{{ cart.total_price | money }}</span>
    </div>
    <div class="cart-checkout">
      <a href="/checkout" class="cart-checkout-btn">Checkout</a>
    </div>
  {% else %}
    <p class="cart-empty">Your cart is currently empty.</p>
  {% endif %}
</div>